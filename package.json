    "convict": "^4.4.0",
    "express": "^4.16.4",
    "express-transform-bare-module-specifiers": "^1.0.2",
    "jsplumb": "^2.8.5",
    "lodash.debounce": "^4.0.8",
    "sleep-promise": "^8.0.1",
    "socket.io": "^2.2.0"
  }
