{
  "name": "matrix-controller",
  "version": "1.0.0",
  "description": "GDQ's in-house system for controlling our video matricies.",
  "main": "src/index.ts",
  "author": "Alex Van Camp <alex@supportclass.net>",
  "license": "MIT",
  "devDependencies": {
    "@serialport/binding-mock": "^2.0.2",
    "@supportclass/tsconfig-base": "^1.0.2",
    "@types/convict": "^4.2.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/lodash.debounce": "^4.0.4",
    "@types/node": "^10.12.12",
    "@types/serialport": "^7.0.0",
    "@types/sinon": "^5.0.7",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "jest": "^23.6.0",
    "sinon": "^7.1.1",
    "socket.io-client": "^2.2.0",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-xo": "^0.10.0",
    "typescript": "^3.2.2"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "debug": "node --inspect -r ts-node/register src/index.ts",
    "pretest": "npm run static",
    "test": "jest --coverage",
    "static": "tslint -c tslint.json 'src/**/*.ts' public/app.ts '__tests__/**/*.ts'",
    "prebuild": "npm run static",
    "build": "tsc -p public/tsconfig.json",
    "postbuild": "sed -i~ 1d public/app.js",
    "watch": "tsc -p public/tsconfig.json --watch",
    "prerelease": "npm run build && npm run test",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master"
  },
  "dependencies": {
    "@serialport/bindings": "^2.0.3",
    "@serialport/parser-byte-length": "^2.0.2",
    "@serialport/parser-readline": "^2.0.2",
